<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript" src="src/scriptjs/index.js"></script>
    <script src="src/scriptjs/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="/src/public/css/admin_table.css">
    <link rel="icon" href="/images/wowv2.png">
    <title>AdminPage - Epid Cavalry</title>
</head>
<body>
    <%- include('header_admin.ejs') %>

    <div class="container">
        
        <!-- Users Handler -->
        <div class="table-data">
            <h1> Welcome Master</h1>
            <h2> Advertissement</h2>
            <table border="1", class="bording_tableau">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Short description</th>
                    <th>Full description</th>
                    <th>Wage</th>
                    <th>Place</th>
                    <th>Working time</th>
                    <th>Tag</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                
                <%
                if(userData.length!=0){
                    var i=1;
                    userData.forEach(function(data)
                    {
                %>
                <tbody>
                <tr>
                    <td><%=data.title %></td>
                    <td><%=data.short_description %></td>
                    <td><%=data.full_description %></td>
                    <td><%=data.wages %></td>
                    <td><%=data.place %></td>
                    <td><%=data.working_time %></td>
                    <td><%=data.type %></td>
                    <td><a href="/edit_ad/<%=data.idadvertissements%>">Edit</a></td>
                    <td><a href="/delete_ad/<%=data.idadvertissements%>">Delete</a></td>
                </tr>
                </tbody>
                <%  i++; }) %>
                <% } else{ %>
                    <tr>
                        <td colspan="7">No Data Found</td>
                    </tr>
                <% } %>
            </table>
            <table border="1", class="bording_tableau">
                <td><a href="/insert_ad">Add a new firm</a></td>
            </table>

            
        </div>    
    </div>

    <%- include('footer.ejs') %>
</body>
</html>
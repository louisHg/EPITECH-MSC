<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/idFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Folder name :"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Folder Page"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"/>

        <ImageView
            android:id="@+id/imageViewFullImages"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/folder"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User to added :"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="330dp"/>

        <EditText
            android:id="@+id/textEmailtoAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:ems="13" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addAUser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/add_person" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User to added :"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="410dp"/>

        <EditText
            android:id="@+id/textEmailtoDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            android:ems="13" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteAUser"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/remove_person" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteFolder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="570dp"
            android:background="@drawable/delete" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="510dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>